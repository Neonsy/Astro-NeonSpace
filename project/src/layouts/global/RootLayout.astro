---
import QueryDevToolsWrapper from '@/components/QueryDevToolsWrapper';

import Head from '@layouts/global/Head.astro';
import ParticleBackground from '@/components/ParticleBackground';
import Container from '@/components/Container';

import '@styles/global.css';

const devEnv = import.meta.env.DEV;

type Props = {
    children: any;
    title: string;
    description: string;
    pageClass?: string;
};

const { title, description, pageClass = '' } = Astro.props as Props;
---

<!doctype html>
<html lang='en'>
    <Head title={title} description={description} />
    <body class='body-gradient'>
        <ParticleBackground client:load />
        <Container>
            <main class={`${pageClass} min-h-screen`}>
                <slot />
            </main>
            {devEnv && <QueryDevToolsWrapper client:load />}
        </Container>
    </body>
</html>
