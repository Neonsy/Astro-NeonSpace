---
import Head from '@layouts/global/Head.astro';
import ParticleBackground from '@/components/ParticleBackground';

import Header from '@/components/Header';

import '@/global.css';

const pathname = new URL(Astro.request.url).pathname;

type Props = {
    children: any;
    title: string;
    description?: string;
};

const {
    title,
    description = 'Enter NeonSpace - A digital portfolio where Timothy Enderson weaves code into art, shares tech insights through blogging, and showcases innovative projects that push creative boundaries',
} = Astro.props as Props;
---

<!doctype html>
<html lang='en'>
    <Head title={title} description={description} />
    <body class='body-gradient'>
        <ParticleBackground client:media='(min-width: 1024px)' transition:persist />
        <div class='flex min-h-screen flex-col'>
            <Header client:load transition:persist currentPath={pathname} />
            <main class='flex-grow'>
                <slot />
            </main>
        </div>
    </body>
</html>
