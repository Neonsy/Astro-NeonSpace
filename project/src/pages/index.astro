---
export const prerender = true;

import Layout from '@layouts/global/RootLayout.astro';
import Container from '@/components/Container';

import Hero from '@/components/Pages/Home/Sections/Hero';
import Stats from '@/components/Pages/Home/Sections/Stats/index.astro';
import LoadingSkeleton from '@/components/Pages/Home/Sections/Stats/LoadingSkeleton';
---

