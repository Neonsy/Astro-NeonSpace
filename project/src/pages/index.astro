---
import Layout from '@layouts/global/RootLayout.astro';
import Container from '@/components/Container';

import Hero from '@/components/Home/Sections/Hero';
import Stats from '@/components/Home/Sections/Stats';

const authToken = import.meta.env.GITHUB_TOKEN;
---

<Layout title='Home'>
    <Container>
        <Hero client:load />
        <Stats client:load username='neonsy' authToken={authToken} />
    </Container>
</Layout>
