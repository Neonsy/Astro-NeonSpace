{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/components/*": ["src/components/*"],
            "@/assets/*": ["src/assets/*"],
            "@/layouts/*": ["src/layouts/*"],
            "@/pages/*": ["src/pages/*"],
            "@/lib/*": ["src/lib/*"],
            "@/types/*": ["src/types/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    }
}
